{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "animefun",
  "version": "0.2.3",
  "identifier": "com.wuyou.animefun",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "animefun",
        "width": 1440,
        "height": 900
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost https: data:",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "**/.animefun/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": []
  }
}
